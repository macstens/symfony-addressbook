{% extends '@App/layout.html.twig' %}

    {% block content %}

    <div class="row">

        <div class="col-12 col-xxl-10 offset-xxl-1">
            {% for message in app.flashes('notice') %}
                <div class="alert alert-info mt-3">
                    {{ message }}
                </div>
            {% endfor %}

            {% if contacts is not empty %}
                <div class="card mt-3">
                    <div class="card-header">
                        <div class="row justify-content-between">
                            <div class="col-auto">
                                <h3 class="card-title">Contacts</h3>
                            </div>
                            <div class="col-auto">
                                {#<form class="navbar-form navbar-left">
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Filter for a contact">
                                    </div>
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </form> #}
                                {% if is_granted('ROLE_ADMIN') %}
                                    <a type="button" href="{{ path('contact_add') }}" class="btn btn-primary btn--create">Create new contact</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped table-bordered table-list">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    {# <th>Street and number</th>
                                    <th>ZIP</th> #}
                                    <th>City</th>
                                    {# <th>Country</th>
                                    <th>Phone number</th>
                                    <th>Birthday</th> #}
                                    <th>Email</th>
                                    {# <th>Picture</th> #}
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for contact in contacts %}
                                <tr>
                                    <td>{{ contact.displayName() }}</td>
                                    {#<td>{{ contact.streetAndNumber }}</td>
                                    <td>{{ contact.zip }}</td>#}
                                    <td>{{ contact.city }}</td>
                                    {#<td>{{ contact.country }}</td>
                                    <td>{{ contact.phonenumber }}</td>
                                    <td>{{ contact.birthday|date("d/m/Y") }}</td>#}
                                    <td>{{ contact.email }}</td>
                                    {#<td>{{ contact.picture }}</td>#}
                                    <td align="center">
                                        <a class="btn btn-secondary" title="View card" href="{{ path('contact_detail', { 'id' : contact.id }) }}"><em class="fa fa-eye"></em></a>
                                        <a class="btn btn-primary" title="Edit" href="{{ path('contact_edit', { 'id' : contact.id }) }}"><em class="fa fa-pencil"></em></a>
                                        <a class="btn btn-danger" title="Delete" href="{{ path('contact_remove', { 'id' : contact.id }) }}"><em class="fa fa-trash"></em></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>
            {% else %}
                <div class="card mt-3">
                    <div class="card-header">
                        <h3 class="card-title">There are no contacts in the database</h3>
                    </div>
                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="card-body">
                            <div class="card-text">
                                <p>But there is hope! Grease your keyboard, get ready:</p>
                                <a href="{{ path('contact_add') }}" class="btn btn-primary btn--create">Create new contact</a>
                            </div>
                        </div>
                    {% endif %}
            {% endif %}

        </div>
    </div>

{% endblock %}